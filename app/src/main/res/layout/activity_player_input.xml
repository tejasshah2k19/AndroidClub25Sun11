<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerInputActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/edtInputUsername"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/username"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/edtInputBet"
         android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/bet"
        android:layout_below="@id/edtInputUsername"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInputPlay"
            android:layout_below="@id/edtInputBet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/play"
            />


</RelativeLayout>